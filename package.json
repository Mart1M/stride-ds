{
  "name": "stride-ds",
  "version": "1.0.0",
  "private": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles": "./styles/index.css"
  },
  "files": [
    "dist",
    "styles"
  ],
  "sideEffects": [
    "styles/*"
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "build:lib": "vite build",
    "build:types": "tsc --project tsconfig.build.json",
    "build:styles": "mkdir -p styles/app && cp src/styles.css styles/index.css && cp src/app/brands.css styles/app/brands.css",
    "prepublishOnly": "npm run build:lib && npm run build:types && npm run build:styles"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "react-aria-components": "^1.11.0",
    "tailwind-merge": "^3.3.1"
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@eslint/eslintrc": "^3",
    "@storybook/addon-docs": "^9.1.2",
    "@storybook/addon-links": "^9.1.2",
    "@storybook/addon-onboarding": "^9.1.2",
    "@storybook/nextjs": "^9.1.2",
    "@storybook/react-vite": "^9.1.2",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "eslint-plugin-storybook": "9.1.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "storybook": "^9.1.2",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vite": "^7.1.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
